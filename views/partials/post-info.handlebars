<article class="post">  
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>    
  </div>
  <div class="meta">
    {{user.username}} on {{created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
  </div>
  <div class="post-text">
    {{post_text}}
  </div>
</article>